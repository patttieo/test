<div class="home-landing" style="background:url({{ section.settings.landing_image | img_url: 'master' }}) no-repeat; background-size:cover;    background-position: right;">
    <div class="landing-content" >
        <img class="mobile-image" src="{{ section.settings.mobile_landing_image | img_url: 'master' }}" alt="">
      <div class="inner-content">
            <h2 class="intro-text">{{ section.settings.intro_text_editor }}</h2>
            <p class="description-text">{{ section.settings.intro_description }}</p>
            <p class="promo-text">{{ section.settings.intro_promo }}</p>
            <a class="btn intro-btn" href="{{ section.settings.landing_button_url }}">{{ section.settings.landing_button_text }}</a>
        </div>
    </div>  
</div>
{{ section.settings.intro_text }}

