            "label": "Moble landing image"
        },
        {
            "type": "richtext",
            "id": "intro_text",
            "label": "Intro text"
        },
        {
            "type": "richtext",
            "id": "intro_text_editor",
            "label": "Intro text"
        },
        {
            "type": "textarea",
            "id": "intro_description",
            "label": "Intro description"
        },
        {
            "type": "textarea",
            "id": "intro_promo", 
            "label": "Promo text"
        },
        { 
            "type": "text",
            "id": "landing_button_text",
            "label": "Intro text"
        }, 
        {
            "type": "url",
            "id": "landing_button_url",
            "label": "Banner button"
        }
    ]
  }
{% endschema %}

